{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["@types/node", "@nuxt/types", "@types/jest"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
      "~/assets/*": ["./assets/*"],
      "~/components/*": ["./components/*"],
      "~/middleware/*": ["./middleware/*"],
      "~/modules/*": ["./modules/*"],
      "~/pages/*": ["./pages/*"],
      "~/plugins/*": ["./plugins/*"],
      "~/static/*": ["./static/*"],
      "~/store": ["./.nuxt/store"],
      "~/router": ["./.nuxt/router"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "./*",
    "./assets/**/*",
    "./components/**/*",
    "./middleware/**/*",
    "./modules/**/*",
    "./pages/**/*",
    "./plugins/**/*",
    "./static/**/*"
  ]
}
